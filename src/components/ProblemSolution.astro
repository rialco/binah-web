---
const problems = [
  'WhatsApp, Excel, la transportadora, el contador... todo por separado',
  'Copiar y pegar datos de pedidos entre plataformas',
  'Sin visibilidad en tiempo real del estado de envíos',
  'Facturación manual en Siigo pedido por pedido',
  'Inventario desactualizado entre bodegas y tienda online',
];

const solutions = [
  'Una sola plataforma conectada con todo tu ecosistema',
  'Pedidos de Shopify y WooCommerce llegan automáticamente',
  'Tracking en vivo con Coordinadora y 99 Envíos',
  'Facturación automática en Siigo al despachar',
  'Inventario sincronizado en tiempo real entre todas tus bodegas',
];
---

<section class="bg-white py-20 lg:py-28">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-extrabold tracking-tighter">
        Deja el caos. <span class="text-binah-purple">Automatiza todo.</span>
      </h2>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      <!-- Problem card -->
      <div class="bg-[#f4f4f5] border-2 border-dashed border-gray-300 rounded-3xl p-8 opacity-70">
        <div class="flex items-center gap-3 mb-6">
          <div
            class="w-10 h-10 bg-red-100 border-2 border-black rounded-brutal flex items-center justify-center"
          >
            <svg class="w-5 h-5 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>
          <h3 class="text-2xl font-extrabold tracking-tighter">Cómo trabajas hoy</h3>
        </div>
        <ul class="space-y-4">
          {
            problems.map((item) => (
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-red-400 mt-0.5 shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2.5"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="font-medium text-black/70">{item}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Solution card -->
      <div
        class="bg-binah-lavender border-2 border-black rounded-3xl p-8 shadow-brutal-purple"
      >
        <div class="flex items-center gap-3 mb-6">
          <div
            class="w-10 h-10 bg-binah-purple border-2 border-black rounded-brutal flex items-center justify-center p-1.5"
          >
            <img src="/binah-logo-white.png" alt="Binah" class="h-full w-auto object-contain" />
          </div>
          <h3 class="text-2xl font-extrabold tracking-tighter">Con Binah</h3>
        </div>
        <ul class="space-y-4">
          {
            solutions.map((item) => (
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-binah-purple mt-0.5 shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2.5"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span class="font-bold text-black">{item}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
