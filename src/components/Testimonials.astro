---
const testimonials = [
  {
    name: 'Carolina Restrepo',
    role: 'Fundadora, BellaNatura.co',
    quote:
      'Antes tardaba 3 horas al día gestionando envíos y facturas. Con Binah todo se genera automático cuando despacho. Ahora me enfoco en hacer crecer mi marca.',
    rating: 5,
  },
  {
    name: 'Andrés Mejía',
    role: 'Director Comercial, TechStore',
    quote:
      'El chatbot de WhatsApp nos cambió el juego. Atiende el 70% de consultas solo y cuando detecta una venta, crea el pedido directamente en la plataforma.',
    rating: 5,
  },
  {
    name: 'Valentina Gómez',
    role: 'Gerente de Operaciones, ModaCo',
    quote:
      'Conectamos Shopify en 10 minutos. Los pedidos caen directo, se generan guías de Coordinadora y se factura en Siigo. Cero copiar y pegar.',
    rating: 5,
  },
];

const StarIcon = `<svg class="w-5 h-5 text-binah-purple" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>`;
---

<section id="testimonios" class="bg-binah-lavender py-20 lg:py-28">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-extrabold tracking-tighter">
        Lo que dicen <span class="text-binah-purple">nuestros clientes</span>
      </h2>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        testimonials.map((testimonial) => (
          <div class="bg-white border-2 border-black rounded-tr-3xl rounded-bl-3xl rounded-tl-sm rounded-br-sm p-8 flex flex-col">
            <div class="flex gap-1 mb-4">
              {Array.from({ length: testimonial.rating }).map(() => (
                <Fragment set:html={StarIcon} />
              ))}
            </div>
            <blockquote class="text-black/80 font-medium leading-relaxed flex-1 mb-6">
              "{testimonial.quote}"
            </blockquote>
            <div class="flex items-center gap-3 pt-4 border-t border-black/10">
              <div class="w-10 h-10 bg-binah-purple border-2 border-black rounded-full flex items-center justify-center text-white font-extrabold text-sm">
                {testimonial.name
                  .split(' ')
                  .map((n) => n[0])
                  .join('')}
              </div>
              <div>
                <div class="font-bold text-sm">{testimonial.name}</div>
                <div class="text-xs text-black/50 font-medium">{testimonial.role}</div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
