const navLinks = [
  { label: 'Funcionalidades', href: '#funcionalidades' },
  { label: 'CÃ³mo Funciona', href: '#como-funciona' },
  { label: 'Testimonios', href: '#testimonios' },
  { label: 'FAQ', href: '#faq' },
];
---

<nav id="v3-nav" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/v3" class="flex items-center gap-2.5 shrink-0" aria-label="Binah - Inicio">
        <div class="w-8 h-8 rounded-lg bg-indigo-500 flex items-center justify-center">
          <span class="text-white text-sm font-bold font-display">B</span>
        </div>
        <span class="text-white font-bold text-xl tracking-tight font-display">binah</span>
      </a>

      <!-- Center pill nav (desktop) -->
      <div class="hidden md:flex items-center bg-white/10 backdrop-blur-md rounded-full px-1.5 py-1.5 border border-white/10">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-white/80 font-medium text-sm px-5 py-2 rounded-full transition-all duration-300 hover:bg-white/10 hover:text-white"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA -->
      <a
        href="https://app.binah.co/onboarding"
        class="bg-indigo-500 text-white font-medium text-sm px-6 py-2.5 rounded-xl shadow-[0_0_20px_rgba(99,102,241,0.3)] transition-all duration-300 hover:bg-indigo-400 hover:shadow-[0_0_30px_rgba(99,102,241,0.5)] hover:scale-[1.02]"
      >
        Comenzar Gratis
      </a>
    </div>
  </div>
</nav>

<script>
  const nav = document.getElementById('v3-nav');
  if (nav) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 80) {
        nav.style.background = 'rgba(15, 23, 42, 0.8)';
        nav.style.backdropFilter = 'blur(12px)';
        nav.style.borderBottom = '1px solid rgba(255,255,255,0.1)';
      } else {
        nav.style.background = 'transparent';
        nav.style.backdropFilter = 'none';
        nav.style.borderBottom = 'none';
      }
    }, { passive: true });
  }
</script>
