---
import BrutalistButton from './ui/BrutalistButton.astro';
import BrowserMockup from './BrowserMockup.astro';
---

<section class="relative bg-binah-purple pt-32 pb-8 border-b-2 border-black overflow-hidden flex-1 flex flex-col justify-center">
  <!-- Gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#3a1fdb] via-binah-purple to-[#7c3aed]"></div>

  <!-- Blurred spheres -->
  <div class="absolute top-[-10%] left-[-5%] w-[500px] h-[500px] rounded-full bg-[#7c3aed] opacity-40 blur-[120px]"></div>
  <div class="absolute bottom-[-15%] right-[-10%] w-[600px] h-[600px] rounded-full bg-[#2563eb] opacity-30 blur-[140px]"></div>
  <div class="absolute top-[40%] left-[50%] w-[350px] h-[350px] rounded-full bg-[#a855f7] opacity-20 blur-[100px]"></div>
  <div class="absolute top-[10%] right-[20%] w-[250px] h-[250px] rounded-full bg-[#06b6d4] opacity-15 blur-[90px]"></div>

  <!-- Dot pattern overlay -->
  <div class="absolute inset-0 bg-dot-pattern"></div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex-1 flex items-center">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center w-full">
      <!-- Left column -->
      <div class="flex flex-col gap-6">
        <h1 class="text-5xl sm:text-6xl lg:text-8xl font-extrabold text-white tracking-tighter leading-[0.9]">
          Tu negocio.<br />
          <span class="text-stroke-white">Una</span> plataforma.
        </h1>

        <p class="text-white/80 text-lg font-medium max-w-md">
          Pedidos, seguimiento de clientes, envíos, facturación, inventario y WhatsApp con IA — desde un solo lugar.
        </p>

        <div class="flex flex-wrap gap-4 mt-2">
          <BrutalistButton variant="white" size="lg" href="https://app.binah.co/onboarding">
            Comenzar Gratis
          </BrutalistButton>
          <BrutalistButton variant="outline-white" size="lg" href="#como-funciona">
            Ver Cómo Funciona
          </BrutalistButton>
        </div>

        <div class="flex items-center gap-4 mt-4 text-white/70 text-sm font-medium">
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
            Sin tarjeta de crédito
          </span>
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
            14 días de prueba gratis
          </span>
        </div>
      </div>

      <!-- Right column -->
      <div class="flex justify-center lg:justify-end">
        <BrowserMockup />
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="flex justify-center pb-4 pt-6">
    <a href="#integraciones" class="scroll-indicator flex flex-col items-center gap-1.5 text-white/50 hover:text-white/80 transition-colors">
      <span class="text-xs font-bold tracking-widest uppercase">Scroll</span>
      <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>
