---

<footer class="bg-binah-charcoal border-t-2 border-black pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      {
        Object.entries(footerLinks).map(([category, links]) => (
          <div>
            <h4 class="text-white font-extrabold text-sm tracking-tighter mb-4">{category}</h4>
            <ul class="space-y-3">
              {links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-white/50 text-sm font-medium hover:text-white transition-colors"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div
      class="flex flex-col md:flex-row items-center justify-between gap-6 pt-8 border-t border-white/10"
    >
      <div class="flex items-center gap-2">
        <img
          src="/binah-logo-white.png"
          alt="Binah"
          class="h-6 w-auto"
          onerror="this.style.display='none';this.nextElementSibling.style.display='block'"
        />
        <span class="text-white font-extrabold text-lg tracking-tighter hidden">Binah</span>
        <span class="text-white/40 text-sm font-medium ml-2">
          &copy; {new Date().getFullYear()} Binah. Todos los derechos reservados.
        </span>
      </div>

      <div class="flex items-center gap-3">
        {
          socialIcons.map((social) => (
            <a
              href="#"
              aria-label={social.label}
              class="group w-10 h-10 bg-binah-dark border-2 border-white/20 rounded-brutal flex items-center justify-center transition-all duration-200 hover:bg-binah-purple hover:border-binah-purple focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-binah-purple"
            >
              <svg
                class="w-4 h-4 text-white/50 transition-colors group-hover:text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <Fragment set:html={social.icon} />
              </svg>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
