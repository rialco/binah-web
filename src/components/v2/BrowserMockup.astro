---

<div class="relative group w-full max-w-3xl mx-auto">
  <!-- Outer glow -->
  <div class="absolute -inset-1 bg-gradient-to-r from-[#4d37f6] via-[#7c3aed] to-[#a855f7] rounded-[0.625rem] blur-lg opacity-30 group-hover:opacity-50 transition-opacity duration-500"></div>

  <!-- Browser window -->
  <div class="relative bg-white rounded-[0.625rem] overflow-hidden">
    <!-- Title bar -->
    <div class="bg-[#171e19] h-10 px-4 flex items-center gap-3">
      <div class="flex gap-1.5">
        <div class="w-3 h-3 rounded-full bg-[#ff5f57]"></div>
        <div class="w-3 h-3 rounded-full bg-[#febc2e]"></div>
        <div class="w-3 h-3 rounded-full bg-[#28c840]"></div>
      </div>
      <div class="flex-1 flex justify-center">
        <div class="bg-white/10 rounded-md px-4 py-1 text-white/40 text-xs font-medium w-64 text-center">
          app.binah.co/dashboard
        </div>
      </div>
      <div class="w-12"></div>
    </div>

    <!-- Dashboard content -->
    <div class="flex">
      <!-- Sidebar -->
      <div class="w-48 bg-[#171e19] p-4 hidden sm:block min-h-[320px]">
        <div class="flex items-center gap-2 mb-6">
          <div class="w-6 h-6 rounded bg-[#4d37f6] flex items-center justify-center">
            <span class="text-white text-[10px] font-bold">B</span>
          </div>
          <span class="text-white text-sm font-bold">Binah</span>
        </div>
        <nav class="space-y-1">
          <div class="flex items-center gap-2 px-3 py-2 rounded-md bg-[#4d37f6]/20 border-l-2 border-[#4d37f6]">
            <svg class="w-4 h-4 text-[#4d37f6]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25a2.25 2.25 0 01-2.25-2.25v-2.25z" />
            </svg>
            <span class="text-[#4d37f6] text-xs font-medium">Dashboard</span>
          </div>
          {['Pedidos', 'Clientes', 'Envíos', 'Inventario', 'Facturas'].map((item) => (
            <div class="flex items-center gap-2 px-3 py-2 text-white/40 hover:text-white/60 transition-colors">
              <div class="w-4 h-4 rounded bg-white/10"></div>
              <span class="text-xs font-medium">{item}</span>
            </div>
          ))}
        </nav>
      </div>

      <!-- Main content area -->
      <div class="flex-1 p-4 bg-[#f8f9fa]">
        <!-- Stats row -->
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mb-4">
          {[
            { label: 'Pedidos', value: '847', change: '+12.5%', up: true },
            { label: 'Ingresos', value: '$12.4M', change: '+18.2%', up: true },
            { label: 'Clientes', value: '2,341', change: '+8.7%', up: true },
            { label: 'Conversión', value: '3.42%', change: '+0.8%', up: true },
          ].map((stat) => (
            <div class="bg-white rounded-lg p-3 border border-gray-100">
              <div class="text-[10px] text-gray-400 font-medium mb-1">{stat.label}</div>
              <div class="text-sm font-extrabold text-[#171e19]">{stat.value}</div>
              <div class="flex items-center gap-1 mt-1">
                <span class="text-[10px] font-bold text-emerald-500">{stat.change}</span>
                <!-- Mini sparkline -->
                <svg class="w-12 h-4" viewBox="0 0 48 16">
                  <polyline
                    fill="none"
                    stroke="#4d37f6"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    points="0,12 8,10 16,13 24,8 32,6 40,9 48,3"
                  />
                </svg>
              </div>
            </div>
          ))}
        </div>

        <!-- Chart + Table row -->
        <div class="grid grid-cols-1 sm:grid-cols-5 gap-3">
          <!-- Revenue chart -->
          <div class="sm:col-span-3 bg-white rounded-lg p-3 border border-gray-100">
            <div class="text-[10px] text-gray-400 font-medium mb-2">Ingresos Mensuales</div>
            <svg class="w-full h-24" viewBox="0 0 280 80" preserveAspectRatio="none">
              <defs>
                <linearGradient id="chart-fill" x1="0" y1="0" x2="0" y2="1">
                  <stop offset="0%" stop-color="#4d37f6" stop-opacity="0.3" />
                  <stop offset="100%" stop-color="#4d37f6" stop-opacity="0" />
                </linearGradient>
              </defs>
              <path
                d="M0,60 Q40,55 70,45 T140,30 T210,20 T280,10 L280,80 L0,80 Z"
                fill="url(#chart-fill)"
              />
              <path
                d="M0,60 Q40,55 70,45 T140,30 T210,20 T280,10"
                fill="none"
                stroke="#4d37f6"
                stroke-width="2"
                stroke-linecap="round"
              />
              <circle cx="280" cy="10" r="3" fill="#4d37f6" />
            </svg>
          </div>

          <!-- Recent orders table -->
          <div class="sm:col-span-2 bg-white rounded-lg p-3 border border-gray-100">
            <div class="text-[10px] text-gray-400 font-medium mb-2">Pedidos Recientes</div>
            <table class="w-full">
              <tbody class="text-[10px]">
                {[
                  { id: '#1847', amount: '$245K', status: 'Entregado', color: 'bg-emerald-100 text-emerald-700' },
                  { id: '#1846', amount: '$180K', status: 'En proceso', color: 'bg-[#ede9fe] text-[#4d37f6]' },
                  { id: '#1845', amount: '$92K', status: 'Pendiente', color: 'bg-amber-100 text-amber-700' },
                  { id: '#1844', amount: '$310K', status: 'Entregado', color: 'bg-emerald-100 text-emerald-700' },
                  { id: '#1843', amount: '$156K', status: 'En proceso', color: 'bg-[#ede9fe] text-[#4d37f6]' },
                ].map((order) => (
                  <tr class="border-b border-gray-50 last:border-0">
                    <td class="py-1.5 font-medium text-[#171e19]">{order.id}</td>
                    <td class="py-1.5 text-gray-500">{order.amount}</td>
                    <td class="py-1.5 text-right">
                      <span class={`inline-block px-1.5 py-0.5 rounded text-[8px] font-bold ${order.color}`}>
                        {order.status}
                      </span>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
