<section class="relative -mt-16 z-20 pb-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white/5 backdrop-blur-[12px] border border-white/10 rounded-2xl p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-0 md:divide-x md:divide-white/10">
        <!-- Frameworks -->
        <div class="md:pr-8">
          <div class="text-white/40 text-xs font-medium uppercase tracking-wider mb-4">Frameworks</div>
          <div class="flex items-center gap-6">
            {frameworks.map((fw) => (
              <div class="flex items-center gap-2 group cursor-pointer">
                <svg class="w-5 h-5 text-white/40 transition-colors duration-300 group-hover:text-[#4d37f6]" fill="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={fw.icon} />
                </svg>
                <span class="text-white/50 text-sm font-medium transition-colors duration-300 group-hover:text-white">{fw.name}</span>
              </div>
            ))}
          </div>
        </div>

        <!-- Integrations marquee -->
        <div class="md:pl-8 overflow-hidden">
          <div class="text-white/40 text-xs font-medium uppercase tracking-wider mb-4">Integraciones</div>
          <div class="relative overflow-hidden">
            <div class="flex animate-marquee whitespace-nowrap">
              {[...integrations, ...integrations].map((int) => (
                <div class="flex items-center gap-2 mr-8 group cursor-pointer shrink-0">
                  <svg class="w-4 h-4 text-white/30 transition-colors duration-300 group-hover:text-[#4d37f6]" fill={int.name === 'Siigo' || int.name === '99 Envíos' || int.name === 'Wompi' || int.name === 'Infobip' ? 'none' : 'currentColor'} viewBox="0 0 24 24" stroke={int.name === 'Siigo' || int.name === '99 Envíos' || int.name === 'Wompi' || int.name === 'Infobip' ? 'currentColor' : 'none'} stroke-width="1.5">
                    <Fragment set:html={int.icon} />
                  </svg>
                  <span class="text-white/40 text-xs font-medium transition-colors duration-300 group-hover:text-white">{int.name}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
